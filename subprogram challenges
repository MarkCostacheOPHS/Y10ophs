3)

def singleplayer():
    print("single player selected")

def player2():
    print("2 player selected")

def online():
    print("online selected")

def exiting():
    print("exiting...")
    
    
    
def menu():
    print("1 for single player")
    print("2 for 2 player")
    print("3 for online")
    print("4 for exit")

    userInput = int(input("enter 1, 2, ,3 or 4 >>>"))

    if userInput == 1:
                    singleplayer()
    elif userInput == 2:
        player2()
    elif userInput == 3:
        online()
    elif userInput == 4:
        exiting()

menu()

4)

def creative():
    print("creative selected")

def survival():
    print("survival selected")

def hardcore():
    print("hardcore selected")

def adventure():
    print("adventure selected")

def exiting():
    print("exiting...")

def invalidchoice():
    print("")
    print("invalid choice")
    print("")


def menu():
    print("1) Creative")
    print("2) Survival")
    print("3) Hardcore")
    print("4) Adventure")
    print("5) Exit")

    userinput = int(input("enter 1, 2, 3 or 4 >>>"))

    if userinput == 1:
        creative()
    elif userinput == 2:
        survival()
    elif userinput == 3:
        hardcore()
    elif userinput == 4:
        adventure()
    elif userinput == 5:
        exiting()
    else:
        invalidchoice()
        menu()

menu()

